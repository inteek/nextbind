@{
    ViewBag.Title = "Sign";
}

<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta name="description" content="Materia - Admin Template">
    <meta name="keywords" content="materia, webapp, admin, dashboard, template, ui">
    <meta name="author" content="solutionportal">
    <!-- <base href="/"> -->


    <!-- Icons -->
    @Styles.Render("~/fonts/ionicons/css/ionicons.min.css")


    <!-- Fonts -->
    @Styles.Render("~/fonts/font-awesome/css/font-awesome.min.css")


    <!-- Plugins -->
    @Styles.Render("~/styles/plugins")


    <!-- Css/Less Stylesheets -->
    @Styles.Render("~/styles/bootstrap.min.css")
    @Styles.Render("~/styles/main.min.css")




    <!-- <link href='http://fonts.googleapis.com/css?family=Roboto:400,500,700,300' rel='stylesheet' type='text/css'> -->
    <!-- Match Media polyfill for IE9 -->   
     <!--[if IE 9]> @Scripts.Render("~/scripts/ie/matchMedia.js") <![endif]-->


</head>
<body id="app" class="app off-canvas body-full">



    <!-- main-container -->
    <div class="main-container clearfix">

        <!-- content-here -->
        <div class="content-container" id="content">
            <div class="page page-auth">
                <div class="auth-container">

                    <div class="form-head mb20">
                        <h1 class="site-logo h2 mb5 mt5 text-center text-uppercase text-bold"><a href="index.html">Materia</a></h1>
                        <h5 class="text-normal h5 text-center">Sign In to Dashboard</h5>
                    </div>

                    <div class="form-container">
                        <form class="form-horizontal" action="javascript:;">
                            <div class="md-input-container md-float-label">
                                <input type="email" id="txtUser" class="md-input">
                                <label>Email Id</label>
                            </div>

                            <div class="md-input-container md-float-label">
                                <input type="password" id="txtPass" class="md-input">
                                <label>Password</label>
                            </div>

                            <div class="clearfix">
                                <div class="ui-checkbox ui-checkbox-primary right">
                                    <label>
                                        <input type="checkbox" id="chkSave">
                                        <span>Remember me</span>
                                    </label>
                                </div>
                            </div>
                            <div class="clearfix mb15"><a href="@Url.Action("ForgetPass", "Login")" class="text-success small">Forget your password?</a></div>
                            <div class="btn-group btn-group-justified mb15">
                                <div class="btn-group">
                                    <button type="button" class="btn btn-facebook"><span class="ion ion-social-facebook"></span>&nbsp;&nbsp;Facebook</button>
                                </div>
                                <div class="btn-group">
                                    <button id="btnSignIn" dataUrl="@Url.Action("Index", "Home")" type="submit" class="btn btn-success">Sign In</button>
                                </div>
                            </div>
                            <div class="clearfix text-center small">
                                <p>Don't have an account? <a href="@Url.Action("SignUp", "Login")">Create Now</a></p>
                            </div>
                        </form>
                    </div>

                </div> <!-- #end signin-container -->
            </div>



        </div>
        <!-- #end content-container -->

    </div> <!-- #end main-container -->
    <!-- Dev only -->
    <!-- Vendors -->
                 @Scripts.Render("~/scripts/vendors.js")
                @Scripts.Render("~/scripts/connectAsy.js")

            @Scripts.Render("~/scripts/view/SignIn.init.js")


</body>
</html>

